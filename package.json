{
  "name": "tunno",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "license": "MIT",
  "author": "ItsLhuis",
  "scripts": {
    "prepare": "husky && turbo run build --filter=@repo/*",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:desktop": "turbo run dev --filter=@tunno/desktop",
    "dev:mobile": "turbo run dev --filter=@tunno/mobile",
    "dev:web": "turbo run dev --filter=@tunno/web",
    "start": "turbo run start",
    "typecheck": "turbo run typecheck",
    "clean": "git clean -fdX"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.15.0"
  },
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
