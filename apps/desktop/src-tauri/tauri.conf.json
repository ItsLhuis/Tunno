{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tunno",
  "mainBinaryName": "Tunno",
  "version": "1.0.0",
  "identifier": "com.itslhuis.tunno",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4535",
    "beforeDevCommand": "pnpm start",
    "beforeBuildCommand": "pnpm build:vite"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Tunno",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 450,
        "decorations": false,
        "resizable": true,
        "visible": false,
        "useHttpsScheme": true
      },
      {
        "label": "miniPlayer",
        "title": "Tunno",
        "url": "miniPlayer.html",
        "width": 320,
        "height": 320,
        "minWidth": 288,
        "minHeight": 88,
        "decorations": false,
        "resizable": true,
        "visible": false,
        "useHttpsScheme": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "csp": null
    }
  },
  "bundle": {
    "publisher": "ItsLhuis",
    "category": "Music",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["migrations/*"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU3Qzg2RDk5NEY1NjU4QjcKUldTM1dGWlBtVzNJNTZvZ1F3QUVMczJXaENtNG5EOEl2T0x3aEd3RlRtTHBqTGJDMERzMjh6VS8K",
      "endpoints": ["https://raw.githubusercontent.com/ItsLhuis/Tunno/updates/desktop/latest.json"]
    }
  }
}
