{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tunno",
  "mainBinaryName": "Tunno",
  "version": "1.3.0",
  "identifier": "com.itslhuis.tunno",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4535",
    "beforeDevCommand": "pnpm start",
    "beforeBuildCommand": "pnpm build:vite"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Tunno",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 450,
        "decorations": false,
        "resizable": true,
        "visible": false,
        "useHttpsScheme": true
      },
      {
        "label": "miniPlayer",
        "title": "Tunno",
        "url": "miniPlayer.html",
        "width": 320,
        "height": 320,
        "minWidth": 288,
        "minHeight": 88,
        "decorations": false,
        "resizable": true,
        "visible": false,
        "useHttpsScheme": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      },
      {
        "label": "fullscreenPlayer",
        "title": "Tunno",
        "url": "fullscreenPlayer.html",
        "decorations": false,
        "resizable": false,
        "visible": false,
        "useHttpsScheme": true,
        "fullscreen": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "csp": null
    }
  },
  "bundle": {
    "publisher": "ItsLhuis",
    "category": "Music",
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["migrations/*"],
    "copyright": "Copyright © 2025 ItsLhuis. All rights reserved.",
    "license": "MIT",
    "shortDescription": "Personal music library manager and player",
    "longDescription": "Tunno Desktop helps you organize, manage, and play your personal music collection. Import music from the CLI, create playlists, sync with mobile devices, and enjoy full control over your library—all data stored locally under your ownership.",
    "homepage": "https://github.com/ItsLhuis/Tunno",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "allowDowngrades": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      },
      "wix": {
        "upgradeCode": "8e947a33-8464-5cee-9c85-96fc003131da"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "hardenedRuntime": true,
      "dmg": {
        "background": null,
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libayatana-appindicator3-1"]
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3", "libappindicator-gtk3"],
        "release": "1",
        "epoch": 0
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU3Qzg2RDk5NEY1NjU4QjcKUldTM1dGWlBtVzNJNTZvZ1F3QUVMczJXaENtNG5EOEl2T0x3aEd3RlRtTHBqTGJDMERzMjh6VS8K",
      "endpoints": ["https://raw.githubusercontent.com/ItsLhuis/Tunno/updates/desktop/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
